// Mayor a 18.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include"conio.h"

using namespace std;
void main()
{
	int edad;
		cout<<"Ingrese edad: ";
	cin>>edad;
		if (edad>=18)
			cout<<"Puede votar";
		else
			cout<<"No puede votar";


	getch();
}



Jubilarse




// jubilarse.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;
void main ()

	
{
	int genero , edad, n;
	cout<<"ingrese su genero, numero 1 si es hombre , numero 2 si es mujer";
	cin>>genero;
	if (genero==1)
	{
		cout<<"Ingrese su edad";
		if(edad>=65)
		cout << "se puede jubilar";
	else
		cout<<"No se puede jubilar";
	}
	if(genero==2)
	{
	cout<<"Ingrese su edad";
	cin>>edad;
	cout<<"Ingrese numero de hijos";
		cin>>n;
	edad=edad+n;
	if
		(edad>=60)
		cout<<"Se puede jubilar la persona";
	else
	cout<<"No se puede jubilar la persona";
}
getch();
}






// Menu.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;
void main ()

	
{
	float area,base, altura , lado ,salir;
	int opcion;
	cout<<"menu"<<endl;
	cout<<"1.-area de triangulo"<<endl;
	cout<<"2.-area de rectangulo"<<endl;
	cout<<"3.-area del cuadrado"<<endl;
	cout<<"0.-salir"<<endl;
	cout<<"Ingrese opcion a escoger"<<endl;
	cin>>opcion;
	switch(opcion)

	{
	case 1: cout<< "ingrese base:";
		cin>> base;
		cout<<"ingrese altura";
		cin>>altura;
			area=(base*altura)/2;
			cout<<"El area del triangulo es"<<area;
			break;
	case 2: cout << "ingrese base";
		cin >>base;
		cout<<"ingrese altura";
		cin >>altura;
		area= (base * altura);
		cout <<"el area del rectangulo es :"<<area;
		break;
	case 3:cout <<"ingrese lado";
		cin>>lado;
			area=(lado *lado);
			cout<<"El area del cuadrado es :"<<area;
			break;
	case 0:
		cout<<"salir";
		break;
	}getch();
}












// ejercicio 12 : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;
void main ()

	
{
	int np,p1,p2,ef,faltas,numeroestudiantes,i=0;
	float notafinal;
	cout<<"ingrese el numero de estudiantes";
	cin>>numeroestudiantes;
	while(i<numeroestudiantes)
	{cout<<"ingrese nota del primer parcial ";
	cin>>p1;
		cout<<"ingrese nota del segundo parcial";
		cin>>p2;
		cout<<"ingrese nota practica";
		cin>>np;
		cout<< "ingrese numero de faltas";
	if
		(faltas>10)
		ef=0;
	else
	{cout<<"ingrese la nota del final ";
	cin>>ef;
	}
	notafinal=((p1+p2)/2)*0.4+np*0.2+ef*0.4;
		if(notafinal>=51)
			cout<<"el estudiante ha aprobado la materia con "<<notafinal<<"puntos";
		cout<<endl;
	}
	getch();
}

